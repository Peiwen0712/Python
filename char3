#char3
bicycle = ['a','B', 'C', 'D']
print(bicycle)
print(bicycle[0])
print(bicycle[0].title())
print(bicycle[-2])

message = f"My first bicycle was a {bicycle[0].title()}"
print(message)

#change the element in the list
bicycle[0] = "E"
print(bicycle)

#add the element in the list
bicycle.append("car")
print(bicycle)

#start with an empty list, and add
bicycle = []
bicycle.append("1")
bicycle.append("2")
bicycle.append("3")
print(bicycle)

#insert
food = ['apple', 'banana', 'kiwi']
food.insert (0, 'orange')
print(food)

#delete
del food[0]
print(food)

#pop() means remove -1
colour = ['yellow', 'blue', 'green']
print(colour) #['yellow', 'blue', 'green']
popped_colour = colour.pop()
print(colour) #['yellow', 'blue']
print(popped_colour) #green

#pop and remove
fav = colour.pop(1)
print(f"My fav colour is {fav}")
print(colour) #['yellow']
#if dont know the position you want to remove, can use remove
alph = ["a", "b", "c"]
removealph = "b"
print(removealph)
#????????how to print [a, b]????????

#exercise page42
