#organize
alph = ["ee", "gw", "aw", "zef", "cdf"]
alph.sort()
print(alph)
alph.sort(reverse=True)
print(alph)
print(sorted(alph))

#reverse
num = ["1", "3", "2"]
num.reverse()
print(num)

#reverse
abc = ["abc", "def", "ghi"]
print(len(abc))

#exercise 3-8 page 46
city = ["b new york", "c london", "a paris", "d rome", "e taipei"]
print(sorted(city))
print(city)
print(sorted(city, reverse=True))
print(city)
city.reverse()
print(city)
city.reverse()
print(city)
city.sort()
print(city)
city.sort(reverse=True)
print(city)

